{% extends 'base.html.twig' %}

{% block title %} Accueil {% endblock %}

{% block carousel %} {% endblock %}

{% block content %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <h2>DÃ©couvrer nos figures</h2>
    <hr>


    <div class="row">
        {% for figure in figures %}
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card border-primary mb-3 mx-auto" style="max-width: 20rem">
                    {% for image in figure.images %}
                    <div class="card-header text-center">
                        <img src="{{ asset('/assets/uploads/'~image.name) }}" alt="Image" width="220">

                    </div>
                    {% endfor %}
                    <div class="card-body">
                        <h3 class="card-title text-center pb-2 mx-3 border-bottom border-primary">{{ figure.title }}</h3>
                        <p class="card-text">
                        <h4 class="text-center">{{ figure.description }}</h4>
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>


{% endblock %}
